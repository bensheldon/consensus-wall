html
  head
    // CSS: implied media="all"
    link(href="/css/style.css", media="all", rel="stylesheet" )/

  body
    div#content

        ul(id= "wall-" + wall.id).wall
          if wall.cards.length > 0
            each card in wall.cards
              li(id= "card-" + card.id, class= "card", style= "top:"+card.position.split(",")[1]+"px; left: "+card.position.split(",")[0]+"px;")
                if card.title === undefined
                  img(src= card.imagePath)
                else
                  textarea= card.title

        p <a id="newCard" href="#">+</a> Cards below are private; Cards above are public. Drag cards from below to above to share. (<a href="#" id="reconnect">reconnect</a>)

        ul#hand

        input(id="upload", type= "file", name= "upload")



